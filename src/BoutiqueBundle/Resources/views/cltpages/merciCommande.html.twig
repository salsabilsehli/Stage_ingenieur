{% extends 'compte_clt.html.twig' %}

{%  block dynamique %}


    <div class="container main-container headerOffset">




        <div class="row">
            <div class="col-lg-12 ">
                <div class="row userInfo">

                    <div class="thanxContent text-center">

                        <h1> Nous vous remercions de votre commande <a href="{{ path('details_commande',{'id':commande.id,'nomB':username,'cltname':client.username}) }}">#CMD_{{ commande.id }}</a></h1>
                        <h4>Nous vous ferons savoir quand vos articles sont sur le chemin</h4>

                    </div>

                    <div class="col-lg-10 col-center">
                        <h4></h4>

                        <div class="cartContent table-responsive  w100">
                            <table style="width:100%" class="cartTable cartTableBorder">
                                <tbody>

                                <tr class="CartProduct  cartTableHeader">
                                    <td colspan="3"> Articles à expédier</td>


                                    <td style="width:15%"></td>
                                </tr>
                                    {% for p in produits %}
                                        <tr class="CartProduct">
                                            <td class="CartProductThumb">
                                                <div><a href="{{ path('product_details',{'nomB':username,'cltname':client.username,'id':p.produit.id}) }}"><img src="{{ asset('/images/' ~ p.produit.image) }}" alt="img"></a>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="CartDescription">
                                                    <h4><a href="{{ path('product_details',{'nomB':username,'cltname':client.username,'id':p.produit.id}) }}">{{ p.produit.nomProd }} </a></h4>
                                                    {% if p.taille != NULL %}
                                                        <span class="size"> taille : {{ p.taille }} </span>
                                                    {% endif %}
                                                    {% if p.couleur != NULL %}
                                                        <div class="size"> couleur :



                                                            <FONT COLOR="{{ p.couleur }}" >
                                                                <div style="width: 20px;border: 1px black solid;
                                                                        height: 20px;
                                                                        border-radius: 20px ;
                                                                        background: {{ p.couleur }};"></div>
                                                            </FONT>




                                                        </div>
                                                    {% endif %}

                                                </div>
                                            </td>

                                            <td class="price">( {{ p.quantite}} )</td>

                                    {% if p.produit.Remise!=0 %}
                                        <td class="price"> {{ (p.quantite * p.produit.prix *(100 - p.produit.remise ) / 100) |number_format(3)}} Dt</td>
                                    {% else %}
                                        <td class="price">{{ (p.quantite * p.produit.prix) |number_format(3)}} Dt</td>
                                    {% endif %}                                </tr>
                                        {% endfor %}

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--/row end-->

            </div>

            <!--/rightSidebar-->

        </div>
        <!--/row-->

        <div style="clear:both"></div>
    </div>
{% endblock %}