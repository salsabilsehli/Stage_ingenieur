{% extends 'base.html.twig' %}
{% block active %}
    <li class="active"><a href="{{path('backend_index',{'username':username})}}"><i class="ft-home"></i><span class="menu-title" data-i18n="">Acceuil</span></a>
    </li>
    <li class=" nav-item" ><a href="{{ path('bk_categories',{'username':username}) }}"><i class="ft-layers"></i><span class="menu-title" data-i18n="">Catégories</span></a>
    </li>
    <li class=" nav-item"><a href="{{ path('bk_produits',{'username':username}) }}"><i class="ft-box"></i><span class="menu-title" data-i18n="">Produits</span></a>
    </li>
    <li class=" nav-item"><a href="{{ path('bk_marques',{'username':username}) }}"><i class="la la-tags"></i><span class="menu-title" data-i18n="">Marques</span></a>
    </li>
    <li class=" nav-item"><a href="{{ path('bk_clients',{'username':username}) }}"><i class="la la-female"></i><span class="menu-title" data-i18n="">Clients</span></a>
    </li>
    <li class=" nav-item"><a href="{{ path('bk_commandes',{'username':username}) }}"><i class="la la-cart-arrow-down"></i><span class="menu-title" data-i18n="">Commandes</span></a>
    </li>

{% endblock %}
{% block dynamique %}
    <h1 align="center" style="margin-top: 5%;font-family: Vivaldi;font-size: 5em"> Bienvenue {{ username }} admin !</h1><br><br><br><br>
    <div class="row">
        <div class="col">
            {% if rs == NULL %}
                <h3 style="margin-left: 20px"><img src="{{ asset('assets/img/plus.png') }}" style="height: 30px">   Veuillez remplir les informations générales sur votre boutique
                    </h3>
            {% else %}
                <h3  style="margin-left: 20px">Raison sociale : {{ rs }}</h3>
                <br>
                <h3  style="margin-left: 20px">Numéro de telephone : {{ num }}</h3>

            {% endif %}
            <br><a href=" {{ path('frontend_index',{'username': username}) }}"><h3  style="margin-left: 20px">voir mon boutique</h3></a>
        </div>
        <div class="col-xl-4 col-lg-12" style="margin-right: 100px">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <h4 class="card-title">Produits récents</h4>
                        </div>
                        <div id="carousel-area" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-area" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-area" data-slide-to="1"></li>
                                <li data-target="#carousel-area" data-slide-to="2"></li>
                                <li data-target="#carousel-area" data-slide-to="3"></li>
                                <li data-target="#carousel-area" data-slide-to="4"></li>
                            </ol>
                            {% if data != NULL %}
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img src="{{ asset('/images/' ~ data[0].produit.image) }}" class="d-block w-100" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('/images/' ~ data[1].produit.image) }}" class="d-block w-100" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('/images/' ~ data[2].produit.image) }}" class="d-block w-100" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('/images/' ~ data[3].produit.image) }}" class="d-block w-100" alt="Fourth slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('/images/' ~ data[4].produit.image) }}" class="d-block w-100" alt="Fifth slide">
                                </div>
                            </div>
                            {% endif %}
                            <a class="carousel-control-prev" href="#carousel-area" role="button" data-slide="prev">
                                <span class="la la-angle-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-area" role="button" data-slide="next">
                                <span class="la la-angle-right icon-next" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
                        <span class="tags float-right">
                    <span class="badge badge-pill badge-primary">Branding</span>
                    <span class="badge badge-pill badge-danger">Design</span>
                </span>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}